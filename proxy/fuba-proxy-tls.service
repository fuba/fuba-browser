[Unit]
Description=fuba-proxy stunnel TLS Terminator (mTLS)
After=network.target
Requires=fuba-proxy.service

[Service]
Type=forking
PIDFile=/run/fuba-proxy/stunnel.pid
ExecStartPre=/bin/mkdir -p /run/fuba-proxy
ExecStart=/usr/bin/stunnel /etc/fuba-proxy/stunnel-server.conf
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
